<section class="contact">
  <div class="contact__inner">

    <h1 class="contact__header">Any Questions?</h1>
    <p class="contact__intro">Leave your message and our manager will answer you as soon as possible</p>

    <form class="contact__form" action="/" method="post">
      <input type="text" name="name" placeholder="Name">
      <input type="email" name="email" placeholder="E-mail">
      <textarea name="message" rows="8" cols="40" placeholder="Message"></textarea>
      <input type="submit" value="Send request">
    </form>

  </div>
</section>
