<section class="testimonial">
  <div class="testimonial__inner">
    <div class="testimonial__slides-wrap">

      {{#each testimonials}}
      <div class="testimonial__slide">

        <h2 class="testimonial__header">Отзывы</h2>

        <div class="testimonial__content">
          <div class="testimonial__photo">
            <img src="{{{photo.url}}}" alt="" >
            <span class="testimonial__photo-title">{{{firstName}}} {{{secondName}}} {{{position}}}</span>
          </div>

          <div class="testimonial__info">
            <h3 class="testimonial__info-title">Our Team Combines</h3>
            <p class="testimonial__info-text">{{{text}}}</p>
            <div class="testimonial__info-pictures">
              <img src="" alt="">
              <img src="" alt="">
            </div>
          </div>
        </div>

      </div>
      {{/each}}

    </div>

