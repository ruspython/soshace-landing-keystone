<section id="blog" class="scroll-section root-sec grey lighten-5 padd-tb-120 blog-wrap">
    <div class="container">
        <div class="row">
            <div class="blog-inner">
                <div class="col-sm-12 card-box-wrap">
                    <div class="row">
                        <div class="clearfix section-head blog-text">
                            <div class="col-sm-10">
                                <h2 class="title">Blog</h2>

                                <p class="regular-text">{{{company.blogDescription}}}</p>
                            </div>
                        </div>
                        <div class="clearfix card-element-wrapper" id="blog-posts">
							{{#each posts}}
                                <article class="col-sm-6 col-md-4 single-card-box single-post">
                                    <div class="card wow fadeInUpSmall" data-wow-duration=".7s">
                                        <div class="card-image">
                                            <div class="card-img-wrap">
                                                <div class="blog-post-thumb waves-effect waves-block waves-light">
                                                    <a href="{{postUrl slug}}"><img class="activator" src="{{{image.url}}}"
                                                                               alt="">
                                                    </a>
                                                </div>
                                                <div class="post-body">
                                                    <a href="{{postUrl slug}}" class="post-title-link brand-text"><h2
                                                            class="post-title">{{{title}}}</h2></a>

                                                    <p class="post-content">{{{content.brief}}}</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="clearfix card-content">
                                            <!--<a href="#" class="left js-favorite" title="Love this"><i-->
                                                    <!--class="mdi-action-favorite"></i><span class="numb">15</span></a>-->
                                            <a href="{{postUrl slug}}" class="brand-text right waves-effect">Read More</a>
                                        </div>
                                    </div>
                                </article>
							{{/each}}
                        </div>
                        <div class="clearfix left-align">
                            <div class="col-sm-12">
                                <a href="/blog" class="waves-effect waves-light btn-large load-more">See More</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ./container -->
</section>
