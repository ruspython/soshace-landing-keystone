    <h1 class="team__header">Our Team</h1>

    <div class="team__members-wrap">

      {{#each developers}}
      <div class="team__member">

        <img src="{{{photo.url}}}" width="280" alt="photo">
        <div class="team__member-info">
          <h2 class="team__member-name">{{{firstName}}} {{{secondName}}}</h2>
          <p class="team__member-position">{{{position}}}</p>
          <p class="team__member-resume">Some info Some info  Some info  Some info Some info Some info </p>
        </div>

      </div>
      {{/each}}

    </div>

