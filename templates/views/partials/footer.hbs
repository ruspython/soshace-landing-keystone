<footer class="main-footer">

  <p class="main-footer__adress-line-1">Russia, Saint-Petersburg</p>
  <p class="main-footer__adress-line-2">{{{company.address}}}</p>

  <p class="main-footer__links">

      <script>
        var openLink = function(param) {
            var firefoxBrowser = navigator.userAgent.indexOf("Firefox") != -1;
            var chromeBrowser = navigator.userAgent.indexOf("Chrome") != -1;
            var android = navigator.userAgent.indexOf("Android") != -1;
           if (firefoxBrowser || (chromeBrowser && android)) {
               open(param.href, param.target, 'height='+window.innerheight+',width='+window.innerwidth+'resizable=no');
           }
        }
      </script>

      <a class="main-footer__facebook-link" href="{{{company.facebookUrl}}}" target="_blank" onClick="openLink(this)">Facebook</a>
      <a class="main-footer__skype-link" href="skype:{{{company.skypeLogin}}}" onClick="openLink(this)">{{{company.skypeLogin}}}</a>
      <a class="main-footer__instagram-link" href="{{{company.instagramUrl}}}" target="_blank" onClick="openLink(this)">Instagram</a>
      <br/>
      <a class="main-footer__upwork-link" href="{{{company.upworkUrl}}}" target="_blank" onClick="openLink(this)">Upwork</a>
      <a class="main-footer__github-link" href="{{{company.githubUrl}}}" target="_blank" onClick="openLink(this)">Github</a>
      <br/>
      <a class="main-footer__mail-link" href="mailto:{{{company.supportEmail}}}" onClick="openLink(this)">{{{company.supportEmail}}}</a>
  </p>

  <a class="flying-btn flying-btn--hidden scroll" href="#contact">{{t 'hire us'}}</a>
</footer>
